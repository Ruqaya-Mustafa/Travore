<!-- views/profile.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
</head>
<body>
  <h1>Welcome, <%= currentUser.firstName %> <%= currentUser.lastName %>!</h1>
  
  <form method="POST" action="/profile/edit?id=<%= currentUser._id %>" >
    <div>
      <label>First Name:</label>
      <input type="text" name="firstName" value="<%= currentUser.firstName %>" required>
    </div>
    
    <div>
      <label>Last Name:</label>
      <input type="text" name="lastName" value="<%= currentUser.lastName %>" required>
    </div>
    
    <div>
      <label>Email:</label>
      <input type="email" name="email" value="<%= currentUser.email %>" required>
    </div>
    <div>
      <label>New Password:</label>
      <input type="password" name="newPassword">
    </div>

    <div>
      <label>Confirm New Password:</label>
      <input type="password" name="confirmNewPassword">
    </div>
    <button type="submit">Update</button>
  </form>
</body>
</html>

